{
  "name": "mds-mailer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "format": "prettier --write .",
    "prepare": "husky install",
    "electron:dev": "concurrently \"npm:dev\" \"node ./scripts/run-electron-dev.js\"",
    "serve-static": "node ./scripts/serve-static.js",
    "electron:build": "npm run build && npm run serve-static & electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@clerk/nextjs": "^5.7.5",
    "express": "^4",
    "mongodb": "^5",
    "mongoose": "^7",
    "next": "16.0.0",
    "nodemailer": "^6",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8",
    "electron": "^25",
    "electron-builder": "^24",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "husky": "^8",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^14",
    "prettier": "^3",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.5",
    "typescript": "^5",
    "wait-on": "^7"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "build": {
    "appId": "com.example.mdsmailer",
    "productName": "MDS Mailer",
    "directories": {
      "output": "dist_electron",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG,README.md,README,readme.md,readme}"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
